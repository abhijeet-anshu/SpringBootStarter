
package com.controllers;

import java.math.BigDecimal;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RestController;

import com.bean.ConversionValue;

@RestController
public class ConversionController {
	@GetMapping("/currency-exchange-DB/to/{to}/from/{from}/quantity/{quantity}")
	public ConversionValue getValue(@PathVariable String to,
									@PathVariable String from,
									@PathVariable String quantity) {
		new ConversionValue(1, "INR123", "USD22", BigDecimal.valueOf(65));
		
		return null;
		
	}

}
